generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  username String @unique
  fullName String
  email String @unique
  password String
  listings Listing[]
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Listing {
  id String @id @default(cuid())
  hostId String
  host User @relation(fields: [id], references: [id])
  title String @unique
  description String
  pricePerNight String
  beds Int
  baths Int
  maxGuests Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}